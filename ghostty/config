# manipulate tmux panes
keybind = cmd+d=text:u{0004}
keybind = cmd+t=text:u{0014}
keybind = cmd+w=text:u{0018}
# navigate tmux tabs
keybind = opt+left=unbind
keybind = opt+right=unbind
# ctrl+l to clear screen - "clear_screen" doesn't work
keybind = ctrl+l=text:\x0c